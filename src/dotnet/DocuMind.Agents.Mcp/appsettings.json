{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.Extensions.ModelContextProtocol": "Debug"
        }
    },
    "ModelContextProtocol": {
        "ServerName": "DocuMind MCP Server",
        "Version": "1.0.0",
        "Description": "Advanced MCP server showcasing .NET 10's native Model Context Protocol support",
        "EnableToolSupport": true,
        "EnableResourceAccess": true,
        "EnablePromptTemplates": true,
        "MaxConcurrentRequests": 100,
        "RequestTimeoutMs": 30000,
        "Tools": {
            "DocumentAnalysis": {
                "Name": "document_analysis",
                "Description": "Analyze document content and extract insights",
                "Enabled": true,
                "Parameters": {
                    "content": {
                        "type": "string",
                        "description": "Document content to analyze",
                        "required": true
                    },
                    "analysis_type": {
                        "type": "string",
                        "description": "Type of analysis: summary, keywords, sentiment",
                        "default": "summary"
                    }
                }
            },
            "VisionProcessing": {
                "Name": "vision_processing",
                "Description": "Process and analyze image content",
                "Enabled": true,
                "Parameters": {
                    "image_url": {
                        "type": "string",
                        "description": "URL of image to process",
                        "required": true
                    },
                    "processing_type": {
                        "type": "string",
                        "description": "Type of processing: analysis, ocr, detection",
                        "default": "analysis"
                    }
                }
            },
            "RagQuery": {
                "Name": "rag_query",
                "Description": "Execute RAG queries against document knowledge base",
                "Enabled": true,
                "Parameters": {
                    "query": {
                        "type": "string",
                        "description": "Query to execute",
                        "required": true
                    },
                    "max_results": {
                        "type": "integer",
                        "description": "Maximum number of results to return",
                        "default": 5,
                        "minimum": 1,
                        "maximum": 20
                    }
                }
            }
        },
        "Resources": {
            "DocumentKnowledgeBase": {
                "Uri": "documents://knowledge_base",
                "Name": "Document Knowledge Base",
                "Description": "Access to processed document collection",
                "MimeType": "application/json",
                "Enabled": true
            },
            "ProcessedImageCollection": {
                "Uri": "images://processed_collection",
                "Name": "Processed Image Collection",
                "Description": "Access to analyzed image data",
                "MimeType": "application/json",
                "Enabled": true
            }
        },
        "Security": {
            "EnableAuthentication": false,
            "AllowedOrigins": [
                "*"
            ],
            "RateLimiting": {
                "RequestsPerMinute": 60,
                "RequestsPerHour": 1000
            }
        }
    },
    "AllowedHosts": "*"
}