{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Documind.Vision": "Debug"
    }
  },
  "AllowedHosts": "*",
  "VisionSettings": {
    "MaxFileSizeMB": 10,
    "SupportedFormats": [
      "jpg",
      "jpeg",
      "png",
      "bmp",
      "gif",
      "tiff",
      "webp"
    ],
    "ProcessingTimeoutSeconds": 30,
    "DemoMode": false
  },
  "AzureVision": {
    "Endpoint": "${AZURE_VISION_ENDPOINT}",
    "Key": "${AZURE_VISION_KEY}",
    "_Comment": "For production: Set AZURE_VISION_ENDPOINT and AZURE_VISION_KEY environment variables"
  }
}